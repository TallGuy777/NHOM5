<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Màu nền bên trong -->
            <stroke android:width="2dp" android:color="#000000"/> <!-- Định nghĩa viền -->
            <corners android:radius="4dp"/> <!-- Bo tròn các góc (tùy chọn) -->
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/> <!-- Padding bên trong (tùy chọn) -->
        </shape>
    </item>
</selector>
